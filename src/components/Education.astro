---
const education = [
  {
    school: "Tribhuvan University, IOE, Pulchowk Engineering Campus",
    degree: "Bachelor of Computer Engineering",
    date: "2017 - 2021",
    score: "80.82%",
    details: [
      "Graduated with Distinction as one of the top students from the faculty",
      "Winner of the HACK-A-WEEK competition at Locus Events",
      "Major Project: Realization of Mental Hygiene Using Deep Learning",
      "Minor Project: Crop Recommendation Using ML",
    ],
  },
];
---

<section id="education" class="py-16 bg-slate-50 dark:bg-slate-900">
  <div class="container mx-auto px-6">
    <h2 class="text-3xl font-bold mb-8 text-slate-800 dark:text-white">
      Education
    </h2>
    <div class="space-y-8">
      {
        education.map((edu) => (
          <div class="bg-white dark:bg-slate-800 p-6 rounded-lg shadow-md border border-slate-100 dark:border-slate-700">
            <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-4">
              <div>
                <h3 class="text-xl font-bold text-slate-900 dark:text-white">
                  {edu.school}
                </h3>
                <p class="text-lg text-sky-600 dark:text-sky-400">
                  {edu.degree}
                </p>
              </div>
              <div class="text-slate-500 dark:text-slate-400 mt-2 md:mt-0">
                {edu.date}
              </div>
            </div>
            <div class="mb-4">
              <span class="inline-block bg-green-100 text-green-800 text-xs px-2 py-1 rounded-full dark:bg-green-900 dark:text-green-100">
                Score: {edu.score}
              </span>
            </div>
            <ul class="list-disc list-inside space-y-2 text-slate-700 dark:text-slate-300">
              {edu.details.map((detail) => (
                <li>{detail}</li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </div>
</section>
