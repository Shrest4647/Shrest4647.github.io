---

<section id="publications" class="py-16 bg-slate-50 dark:bg-slate-900">
  <div class="container mx-auto px-6">
    <h2 class="text-3xl font-bold mb-8 text-slate-800 dark:text-white">
      Publications & Papers
    </h2>
    <div class="space-y-6">
      {
        papers.map((paper) => (
          <div class="bg-white dark:bg-slate-800 p-6 rounded-lg shadow-md border border-slate-100 dark:border-slate-700">
            <div class="flex flex-col md:flex-row justify-between items-start gap-4">
              <div class="flex-1">
                <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-2">
                  {paper.title}
                </h3>
                <p class="text-slate-600 dark:text-slate-300 mb-2 italic">
                  {paper.authors}
                </p>
                <div class="flex items-center gap-3 mb-3">
                  <span class="px-2 py-1 text-xs font-semibold rounded bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-100">
                    {paper.status}
                  </span>
                  {paper.venue && (
                    <span class="text-sm text-slate-500 dark:text-slate-400">
                      {paper.venue}
                    </span>
                  )}
                </div>
                <p class="text-slate-700 dark:text-slate-300 mb-4 leading-relaxed">
                  {paper.abstract}
                </p>
              </div>
              <div class="flex-shrink-0">
                <a
                  href={paper.pdfUrl}
                  target="_blank"
                  class="inline-flex items-center gap-2 px-4 py-2 bg-slate-100 hover:bg-slate-200 dark:bg-slate-700 dark:hover:bg-slate-600 text-slate-700 dark:text-slate-200 rounded transition-colors"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"
                    />
                  </svg>
                  PDF
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
