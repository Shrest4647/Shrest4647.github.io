  {
    title: "Realization of Mental Hygiene Using Deep Learning",
    authors: "Sunil Shrestha, et al.",
    status: "UnderGrad Project Report",
    venue: "Institute of Engineering, Pulchowk Campus",
    abstract:
      "This paper presents a deep learning-based system for monitoring and promoting mental hygiene through real-time analysis of user behavior and emotional states.",
    pdfUrl: "/papers/Realization of Mental Hygiene using Deep Learning.pdf",
  },
